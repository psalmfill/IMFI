<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samfieldhawb.imfiresultcalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".student.LevelActivity" />
        <activity android:name=".student.SemesterActivity" />
        <activity
            android:name=".student.StudentActivity"
            android:label="@string/title_activity_student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".lecturer.LecturerHomeActivity"
            android:label="@string/title_activity_lecturer_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".lecturer.LecturerLoginActivity"
            android:parentActivityName=".ChooseUserActivity" />
        <activity
            android:name=".student.StudentLoginActivity"
            android:parentActivityName=".ChooseUserActivity" />
        <activity android:name=".ChooseUserActivity" />
        <activity android:name=".lecturer.RecordScoreActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".student.StudentRegisterActivity" />
        <activity android:name=".lecturer.LecturerRegisterActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>