<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Students"
        style="@style/TextAppearance.AppCompat.Title" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startStudentReg"
        android:text="Registration"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startStudentHome"
        android:text="Home"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startResultInput"
        android:text="Record Score"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose User"
        android:onClick="startUserChooser"/>

    <Button
        android:id="@+id/students_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sudent Login"
        android:onClick="startStudentLogin"/>

    <Button
        android:id="@+id/lecturer_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lecturer Login"
        android:onClick="startLecturerLogin"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lecturer Home"
        android:onClick="startLecturerHome"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Home"
        android:onClick="startStudent"/>


</LinearLayout>